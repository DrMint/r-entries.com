---
import { getCollection } from "astro:content";
import { render } from "astro:content";
import Html from "src/components/Html.astro";
import Tags from "src/components/Tags.astro";
import AdjacentPosts from "src/components/AdjacentPosts.astro";
import PostMeta from "src/components/PostMeta.astro";
import TableOfContents from "src/components/TableOfContents.astro";
import { Image } from "astro:assets";

export async function getStaticPaths() {
  const posts = await getCollection("posts");
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;

const { title, cover, tags } = post.data;
const { Content, headings } = await render(post);

// Add a space after the numbering
const numberedHeadings = headings.map(({ depth, slug, text }) => ({
  depth,
  slug,
  text: text.replace(/^([\d.]+)/, "$1 "),
}));
---

{/* --------------------------------[ HTML ]-------------------------------- */}

<Html page-root>
  <Image id="cover" src={cover} alt="" width={1024} />
  <div id="header">
    <h1>{title}</h1>
    <PostMeta post={post} />
    <Tags tags={tags} />
  </div>
  <div id="content">
    <div id="navigation">
      <AdjacentPosts currentPost={post} />
      {
        numberedHeadings.length > 0 && (
          <TableOfContents headings={numberedHeadings} />
        )
      }
    </div>
    <div class="prose">
      <Content />
    </div>
  </div>
</Html>

{/* ---------------------------------[ CSS ]-------------------------------- */}

<style>
  [page-root] {
    display: flex;
    flex-direction: column;
    place-items: center;

    & > #cover {
      width: 100%;
      aspect-ratio: 16/9;
      height: auto;
      object-fit: cover;
      border-bottom: 1px solid var(--layout-border);

      background-image: radial-gradient(
        var(--layout-border) 20%,
        transparent 30%
      );
      background-size: 16px 16px;
      background-repeat: space;
    }

    & > #header {
      width: 100%;
      padding: 64px var(--middle-x-padding);
      border-bottom: 2px dotted var(--layout-border);

      display: flex;
      flex-direction: column;
      place-items: center;
      gap: 24px;
      text-align: center;
    }

    & > #content {
      max-width: 70ch;
      width: 100%;
      display: flex;
      flex-direction: column;
      gap: 64px;
      padding: 64px 16px;
      padding-bottom: 128px;

      & > #navigation {
        display: flex;
        flex-direction: column;
        gap: 16px;
      }
    }
  }
</style>
