---
import Lightbox from "../layout/Lightbox.astro";

interface Props {
  src: ImageMetadata;
  alt: string;
}

const { src, alt } = Astro.props;
---

{/* --------------------------------[ HTML ]-------------------------------- */}

<Lightbox
  src={src}
  alt={alt}
  widths={[320, 480, 610, 768, 1024, 1280, 1600, 1920]}
  sizes="(max-width: 650px) 100vw, 608.5px"
  formats={["avif", "webp", "jpg"]}
  fallbackFormat="jpg"
  width={600}
/>

{/* ---------------------------------[ CSS ]-------------------------------- */}

<style>
  picture {
    width: 100%;
    aspect-ratio: 16/9;

    & > img {
      width: 100%;
      height: auto;
      object-fit: cover;
      border: 1px solid var(--layout-border);

      background-color: var(--background);
      background-image: radial-gradient(
        var(--layout-border) 20%,
        transparent 30%
      );
      background-size: 12px 12px;
      background-repeat: space;
    }
  }
</style>
