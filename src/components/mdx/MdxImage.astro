---
import MdxImageImage from "./MdxImageImage.astro";

interface Props {
  src: ImageMetadata;
  alt: string;
  caption?: string | true;
}

const { src, alt, caption } = Astro.props;
---

{/* --------------------------------[ HTML ]-------------------------------- */}

{
  caption ? (
    <figure>
      <MdxImageImage src={src} alt={alt} />
      <figcaption>{caption === true ? alt : caption}</figcaption>
    </figure>
  ) : (
    <MdxImageImage src={src} alt={alt} />
  )
}

{/* ---------------------------------[ CSS ]-------------------------------- */}

<style>
  figure {
    margin-inline: 0;
    margin-bottom: 2em;

    & > figcaption {
      margin-top: 0.5em;
      color: var(--foreground-60);
      text-align: center;
    }
  }
</style>
